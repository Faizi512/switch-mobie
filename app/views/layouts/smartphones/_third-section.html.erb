
<div class="third-section mt-5">
  <h1 class="text-center text-uppercase mb-5"> Check all <span class="text-warning fw-bold">exclusive</span> deals </h1>
  <div class=" rounded-2  align-items-center justify-content-between mx-0">
    <div class="row mx-0">
      <% for i in 5..7 do  %>
          <div class="col-md-4 my-3">
            <div class="mx-4 open-form cursor-p">
              <div class="align-items-center exclusive-deals h-100-px2 blue-gradient-reverse rounded-2 d-flex flex-column justify-content-around px-3 py-4">
                <div class="position-relative">
                  <button class="btn-s">Hot Offers</button>
                </div>
                <div class="d-flex flex-column justify-content-center ">
                  <div class="mx-auto">
                    <%= image_tag(@phoneshome[i][:image], class: "", width: "120" ) %>
                  </div>
                  <p class="fw-bold my-3 fs-23 neon-text text-center"><%= @phoneshome[i][:name] %></p>
                  <div class="mx-auto">
                    <button class="btn btn-warning fw-bold px-3 py-2 text-uppercase w-100"> get now </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
      </div>
  </div>
</div>
