<section class="p-lg-5 px-3 pb-5" id="testimonials">
  <div class="wrapper">
    <div class="row mx-0 w-100 p-0">
      <div class="col-12 text-center text-dark mb-3">
        <h3 class="fw-bold">Our happy customer's reviews</h3>
      </div>
      <% @testimonials.each do |testimonial| %>
        <div class="col-md-4 col-12 text-secondary mb-3 mt-5">
          <div class="comments h-100 rounded-lg">
            <div class="p-lg-5 py-5 px-3">
              <div class="user-image rounded-circle overflow-hidden border position-absolute border-white">
                <%= image_tag(testimonial[:image], class: 'w-100 h-100') %>
              </div>
              <div class="description pt-3">
                <p class="mb-0"><%= testimonial[:comment] %></p>
              </div>
              <div class="d-flex justify-content-between align-items-end pt-5 position-relative">
                <div class="user-name">
                  <p class="mb-0 text-dark"><%= testimonial[:name] %></p>
                  <p class="text-light-500 mb-0"><%= testimonial[:date] %></p>
                </div>
                <div class="quote-img position-absolute">
                  <i class="fas fa-quote-left text-light-500"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>