<!-- Below header section Flipclock -->
<section class="mb-0">
  <div class="below-header">
    <div class="container">
      <div class="row">
        <div class="col-xl-6 col-sm-12 align-self-center">
          <h2 class="text-center">
            <span class="accepted">Get The Best Deals On The Latest Smartphones!</span>
            <br>
            <span class="approvel desktop">5G Ready | Next Day Delivery | Unlimited Data</span>
            <span class="approvel mobile">5G Ready<br> Next Day Delivery <br> Unlimited Data</span>
          </h2>
          <div class="row text-center w-100 d-none d-md-block">
            <%= image_tag("banner-img.png", class: "open-form pl-3", width: "350", alt: "Phones header" ) %>
          </div>
        </div>
        <div class="col-xl-6 col-sm-12 open-form" data-url="/success">
          <div class="card card-body header-deal border-0 px-0">
            <div class="row mx-0 justify-content-center">
              <div id="carouselControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <div class="d-flex flex-md-nowrap flex-wrap justify-content-md-between justify-content-center w-100">
                      <%= image_tag("phone/iphoneairpod.png", class: "min-h iphone-deals image-phone-clock pl-3 pt-4 img-head-clock", alt: "iPhone 11" ) %>
                      <div class="text py-2">
                        <h5 class="font-weight-bold pl-2">iPhone 11</h5>
                        <div class="w-100"></div>
                        <div class="detail-box mt-md-4">
                          <div class="row align-items-center">
                            <div class="pl-2 col text-center border-right pr-0 pr-md-3">
                              <h6 class="font-weight-bold mb-0 mt-2 fs-24">Unlimited</h6>
                              <span class="text-white fs-14 font-weight-bold">
                                Data, Minutes,Texts
                              </span>
                            </div>
                            <div class="pl-2 col text-center">
                              <h6 class="font-weight-bold mb-0 mt-2 fs-24">Free</h6>
                              <span class="text-white fs-14 font-weight-bold">
                                Data Roaming, Personal Hotspot
                              </span>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="carousel-item">
                    <div class="d-flex flex-md-nowrap flex-wrap justify-content-md-between justify-content-center w-100">
                      <%= image_tag("phone/samsungs10plus.png", class: "min-h iphone-deals image-phone-clock pl-3 pt-4", alt: "Samsung S10 plus" ) %>
                      <div class="text py-2">
                        <h5 class="font-weight-bold pl-2">Samsung S10 Plus</h5>
                        <div class="w-100"></div>
                        <div class="detail-box mt-md-4">
                          <div class="row align-items-center">
                            <div class="pl-2 col text-center border-right pr-0 pr-md-3">
                              <h6 class="font-weight-bold mb-0 mt-2 fs-24">Unlimited</h6>
                              <span class="text-white fs-14 font-weight-bold">
                                Data, Minutes,Texts
                              </span>
                            </div>
                            <div class="pl-2 col text-center">
                              <h6 class="font-weight-bold mb-0 mt-2 fs-24">Free</h6>
                              <span class="text-white fs-14 font-weight-bold">
                                Data Roaming, Personal Hotspot
                              </span>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="carousel-item">
                    <div class="d-flex flex-md-nowrap flex-wrap justify-content-md-between justify-content-center w-100">
                      <%= image_tag("phone/samsung-galaxy-s20-ultra-black.png", class: "min-h iphone-deals image-phone-clock pl-3 pt-4 img-head-clock", alt: "Samsung S20 plus" ) %>
                      <div class="text py-2">
                        <h5 class="font-weight-bold pl-2">Samsung S20 Plus Ultra</h5>
                        <div class="w-100"></div>
                        <div class="detail-box mt-md-4">
                          <div class="row align-items-center">
                            <div class="pl-2 col text-center border-right pr-0 pr-md-3">
                              <h6 class="font-weight-bold mb-0 mt-2 fs-24">Unlimited</h6>
                              <span class="text-white fs-14 font-weight-bold">
                                Data, Minutes,Texts
                              </span>
                            </div>
